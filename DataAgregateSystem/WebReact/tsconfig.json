{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    //"strict": true,
    "lib": [ "es5", "es6", "dom", "es2017" ],
    "types": [ "webpack-env" ],
    "noImplicitAny": false
  },
  "exclude": [
    "bin",
    "node_modules",
    "!node_modules/@types"
  ],
  "typings": "./@types/alltypes.d.ts"
}
